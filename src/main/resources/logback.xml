<configuration>

  <!--
    ~ Conversions for logging.
    ~ INFO  -> GREEN
    ~ WARN  -> RED
    ~ ERROR -> RED (BOLD)
    ~ DEBUG -> YELLOW
    -->
  <conversionRule conversionWord="simpleHL" converterClass="xyz.nightfury.logging.SimpleHL"/>

  <!--
    ~ Console appender.
    ~ Writes INFO, WARN, and ERROR to console.
    ~ Filters out DEBUG
    -->
  <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
    <filter class="xyz.nightfury.logging.NormalFilter"/>

    <encoder>
      <pattern>
        %nopex[%d{HH:mm:ss}] [%simpleHL(%level)] [%logger{0}]: %simpleHL(%msg%n%ex)
      </pattern>
    </encoder>
  </appender>

  <!--
    ~ Webhook Appender.
    ~ Sends an embed message to #nightfury-log on the support server.
    -->
  <appender name="Webhook" class="xyz.nightfury.entities.WebhookAppender">
    <filter class="xyz.nightfury.logging.NormalFilter"/>
  </appender>

  <!--
    ~ Rolling file appender.
    ~ Creates a new file in ~/logs/ every day at midnight
    ~ No size limitation, 30 days policy, name format = NightFury.yyyy-MM-dd.log
    -->
  <appender name="File" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <!-- Set to append to file -->
    <append>true</append>

    <!-- Rolling Policy -->
    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      <fileNamePattern>${user.dir}/logs/NightFury.%d{yyyy-MM-dd}.log</fileNamePattern>

      <!-- 30 Days Max Policy -->
      <maxHistory>30</maxHistory>
    </rollingPolicy>

    <encoder>
      <pattern>
        %nopex[%d{HH:mm:ss}] [%level] [%logger{0}]: %msg%n%ex
      </pattern>
    </encoder>
  </appender>

  <!-- Set root level -->
  <root level="DEBUG">
    <appender-ref ref="File"/>
    <appender-ref ref="Webhook"/>
    <appender-ref ref="Console"/>
  </root>

</configuration>
